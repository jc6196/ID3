<h1>Home Page</h1>
<div class="row">
{{#each model as |post|}}
  <div class="col-lg-3 col-sm-6 col-xs-12">
    <div class="thumbnail">
      {{#link-to "posts.show" post}}
        {{#if post.imageURL}}
          <img src="{{post.imageURL}}" class="img-responsive" />
        {{else}}
          {{ember-cli-holderjs src_url="holder.js/100px200" class="img-responsive"}}
        {{/if}}
      {{/link-to}}
      <div class="caption">
        <h4>{{#link-to "posts.show" post}}{{post.title}}{{/link-to}} <small>{{moment-from-now post.timestamp}}</small></h4>
        <p>{{post.body}}</p>
        {{#if post.comments}}
            <p>{{#link-to "posts.show" post}}{{post.comments.length}} comments{{/link-to}}</p>
          {{/if}}
      </div>
    </div>
  </div>
{{/each}}
</div>